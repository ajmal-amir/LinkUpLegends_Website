<%- include('../partials/header.ejs') %>
<div class="page-wrapper">
    <main>
        <h2>Create a New Connection</h2>
        <div class="form-container">
            <div class="form-group">
                <label for="Category">Category</label>
                <select name="Category" id="Category" required>
                    <option value="Social">---Select an option--</option>
                    <option value="Social">Social</option>
                    <option value="Sports">Sports</option>
                    <option value="Education">Education</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Title">Title</label> 
                <input type="text" name="Title" id="Title" required placeholder="Enter the title of your connection">  
            </div>
            <div class="form-group">
                <label for="host">Host</label> 
                <input type="text" name="host" id="host" required placeholder="Enter the host of your connection">  
            </div>
            <div class="form-group">
                <label for="Details">Details</label> 
                <textarea name="Details" id="Details" required placeholder="Enter the details of your connection"></textarea>  
            </div>
            
            <div class="form-group">
                <label for="location">Where</label> 
                <input type="text" name="location" id="location">   
            </div>
            <div class="form-group">
                <label for="Start">Start</label> 
                <input type="datetime-local" name="Start" id="Start" required>  
            </div>
            <div class="form-group">
                <label for="End">End</label> 
                <input type="datetime-local" name="End" id="End" required>  
            </div>            
            <div class="form-group">
                <label for="cost">Cost</label> 
                <input type="text" name="cost" id="cost" required placeholder="Enter the cost of your connection">  
            </div>
            <div class="form-group">
                <label for="file">Image</label> 
                <input type="file" name="file" id="file" required>  
            </div>
            
            <div class="button-container">
                <a href="events.html">
                    <button>Create Connection</button>
                </a>
            </div>
            
        </div>
    </main>

    <div class="image-slider">
        <!-- Your image slider content goes here -->
        <img src="/imgs/imag_1.jpeg" alt="Image 1">
        <img src="/imgs/imag_2.jpeg" alt="Image 2">
        <img src="/imgs/imag_3.jpeg" alt="Image 3">
        <img src="/imgs/imag_4.jpeg" alt="Image 4">
        <img src="/imgs/events_images/event1.jpeg" alt="Image 5">
        <img src="/imgs/events_images/event2.jpeg" alt="Image 6">
        <img src="/imgs/events_images/event3.jpeg" alt="Image 7">
        <img src="/imgs/events_images/event4.jpeg" alt="Image 8">    
    </div>
</div>

<script src="/javascript/scripts.js"></script>
<script src="/javascript/survey.js"></script>

