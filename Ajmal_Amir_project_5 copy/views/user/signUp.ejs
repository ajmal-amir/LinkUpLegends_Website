<%- include('../partials/header.ejs') %>
<body class="login_page">
  <form class="signup-form" action="/user" method="POST">
    <div class="login-wrapper">
        <div class="login_box">
            <div class="login-header">
                <span>Sign Up</span>
            </div>
            <div class="input_box">
                <input type="text" id="firstName" class="input-field" name="firstName" required>
                <label for="firstName" class="login-label">First Name</label>
                <i class="bx bx-user icon"></i>
            </div>
            <div class="input_box">
                <input type="text" id="lastName" class="input-field" name="lastName" required>
                <label for="lastName" class="login-label">Last Name</label>
                <i class="bx bx-user icon"></i>
            </div>
            <div class="input_box">
                <input type="text" id="user" class="input-field" name="email" required>
                <label for="user" class="login-label">Email</label>
                <i class="bx bx-user icon"></i>
            </div>

            <div class="input_box">
                <input type="password" id="pass" class="input-field" name="password" minlength="8" maxlength="64" required>
                <label for="pass" class="login-label">Password</label>
                <i class="bx bx-lock-alt icon"></i>
            </div>

            <div class="remember-forgot">
                <div class="remember-me">
                    <input type="checkbox" id="remember">
                    <label for="remember">Remember me</label>
                </div>

                <div class="forgot">
                    <a href="/user/login">Already Registered?</a>
                </div>
            </div>

            <div class="input_box">
                <input type="submit" class="input-submit" value="Sign Up">
            </div>

            <div class="register">
                <span>Already have an account? <a href="/user/login">Login</a></span>
            </div>
            <div class="Erro-content">
              <% if (errorMessages.length > 0) { %>
                  <% errorMessages.forEach(message => { %>
                      <div class="error"><%= message %></div>
                  <% }) %>
              <% } %>
      
              <% if (successMessages.length > 0) { %>
                  <% successMessages.forEach(message => { %>
                      <div class="success"><%= message %></div>
                  <% }) %>
              <% } %>
          </div>
        </div>
    </div>
  </form>
</body>
